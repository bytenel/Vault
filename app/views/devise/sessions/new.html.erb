<div id="login">
	<div class="container">
		<div class="header">
			<h4>Anytown Police Department</h4>
			<h3>Secure Access</h3>
		</div>

		<div class="login-form">
			<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
			  <div class='clearfix'>
			  <%= f.email_field :email, :autofocus => true, :placeholder => "Username" %>
		      </div>

			  <div class='clearfix'>
			  <%= f.password_field :password, :placeholder => "Password" %>
			  </div>

			  <% if devise_mapping.rememberable? -%>
			    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
			  <% end -%>
		  <div><%= f.button "Sign in", :class => "btn btn-primary login-button" %></div>
		  <%= render "devise/shared/links" %>
		 </div>
	</div>
</div>

<br/>

<% end %>

